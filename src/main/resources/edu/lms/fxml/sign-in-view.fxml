<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" stylesheets="@../css/login.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.lms.Controllers.SignInController">
    <VBox layoutX="305.0" layoutY="31.0" prefHeight="338.0" prefWidth="274.0" styleClass="border"/>
    <Hyperlink layoutX="392.0" layoutY="271.0" text="Have no account?" onMouseClicked="#switchSignUpController"/>
    <CheckBox layoutX="335.0" layoutY="175.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="102.0"
              styleClass="check" text="Remember me"/>
    <Button layoutX="371.0" layoutY="225.0" minHeight="30.0" mnemonicParsing="false"
            prefHeight="45.0" prefWidth="143.0" styleClass="button-signin"
            text="Sign In"/>
    <TextField fx:id="usernameField" layoutX="335.0" layoutY="72.0" minHeight="30.0" prefHeight="38.0" prefWidth="218.0"
               promptText="username">
        <font>
            <Font size="9.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="passwordField" layoutX="335.0" layoutY="126.0" minHeight="30.0" prefHeight="38.0"
                   prefWidth="218.0" promptText="password"/>
    <Hyperlink layoutX="452.0" layoutY="172.0" text="Forgot password?"/>
    <ImageView fx:id="openEyes" fitHeight="17.0" fitWidth="28.0" layoutX="523.0" layoutY="138.0"
               onMouseClicked="#switchVisibility" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/openEyes.png"/>
    </ImageView>
    <TextField fx:id="visiblePassword" layoutX="335.0" layoutY="126.0" minHeight="30.0" prefHeight="38.0"
               prefWidth="218.0" visible="false"/>
    <ImageView fx:id="closedEyes" fitHeight="18.0" fitWidth="28.0" layoutX="523.0" layoutY="136.0"
               onMouseClicked="#switchVisibility" pickOnBounds="true" preserveRatio="true" visible="false">
        <Image url="@../images/closedEyes.png"/>
    </ImageView>
</AnchorPane>
