                     <children>
                        <Button fx:id="activateButton" mnemonicParsing="false" prefHeight="34.0" prefWidth="78.0" text="Activate" />
                        <Button fx:id="suspendButton" mnemonicParsing="false" prefHeight="34.0" prefWidth="78.0" text="Suspend" />
